{
  "root": true,
  "env": { "browser": true, "node": true },
  "extends": ["eslint:recommended", "next/core-web-vitals", "prettier"],
  "globals": {
    "React": "readonly"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-undef": "off"
      }
    }
  ],
  "ignorePatterns": ["**/node_modules/*", "**/out/*", "**/.next/*"]
}
